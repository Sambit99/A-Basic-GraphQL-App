{
  "name": "A-Basic-GraphQL-App",
  "version": "1.0.0",
  "description": "A Basic GraphQL App",
  "main": "src/server.ts",
  "type": "module",
  "scripts": {
    "build": "npx tsc",
    "start:watch": "npx tsc --watch",
    "start:dev": "cross-env NODE_ENV=development nodemon dist/app.js",
    "start:prod": "cross-env NODE_ENV=production node dist/app.js",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --fix",
    "prepare": "husky"
  },
  "author": "Sambit Kumar Sahoo",
  "license": "ISC",
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "npm run format:fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.23.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/node": "^22.13.14",
    "@types/source-map-support": "^0.5.10",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "husky": "^9.1.4",
    "lint-staged": "^15.5.0",
    "nodemon": "^3.1.9",
    "prettier": "3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "colorette": "^2.0.20",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv-flow": "^4.1.0",
    "express": "^4.21.2",
    "graphql": "^16.10.0",
    "helmet": "^8.1.0",
    "source-map-support": "^0.5.21",
    "winston": "^3.17.0"
  }
}
